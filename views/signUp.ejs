<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            margin: 10px;
        }

        .loginBox {
            width: 70vw;
            margin: 8vh 0 0 10vw;
        }
    </style>
    <script>
        
        const radios = document.getElementById('input[id="married"]').onclick();
        console.log(radios);
    </script>
    </head>
<body>
    <div class="loginBox">
        <h3>Adding a new tenant </h3>
        <form action="/signUp" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="First name" aria-label="First name" name="firstName" required>
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" name="lastName">
                </div>
            </div>
            <br>
            
            <!-- Email -->
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" required>
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <!-- Password -->
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Create New Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
            </div>
            <!-- <br> -->
            
            <!-- Mobile number -->
            <div class="col" style="margin-top: 25px;">
                <input type="text" class="form-control" placeholder="Mobile Number" aria-label="First name" name="number" required>
            </div>
            <br>

            <!-- Married -->
            <div class="form-check">
                <input value="Yes" class="form-check-input" type="checkbox" value="true" id="flexCheckDefault" name="married">
                <label class="form-check-label" for="flexCheckDefault">Married</label>
            </div>
            <br>

            <!-- <p> how many childern</p> -->

            <!-- Total number of people -->
            <div class="mb-3">
                <label for="numberOfPeople" class="form-label">Total number of people</label>
                <input type="number" class="form-control" id="numberOfPeople" aria-describedby="emailHelp" name="people">
            </div>
            <!-- <br> -->

            <!-- <p>Job (gov, private , bussiness, other), degination</p> -->
            <div class="form-check">
                <input value="Goverment Job" class="form-check-input" type="radio" id="flexRadioDefault1" name="job">
                <label class="form-check-label" for="flexRadioDefault1">
                    Goverment Job
                </label>
            </div>
            <div class="form-check">
                <input value="Private Job" class="form-check-input" type="radio" id="flexRadioDefault2" name="job">
                <label class="form-check-label" for="flexRadioDefault2">
                    Private Job
                </label>
            </div>
            <div class="form-check">
                <input value="Bussiness" class="form-check-input" type="radio" id="flexRadioDefault3" name="job">
                <label class="form-check-label" for="flexRadioDefault3">
                    Bussiness
                </label>
            </div>
            <div class="form-check">
                <input value="Other" class="form-check-input" type="radio" id="flexRadioDefault4" checked name="job">
                <label class="form-check-label" for="flexRadioDefault4">
                    Other
                </label>
            </div>


            <!-- <p>add photo </p> -->
            <br>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupFile01">Upload Pic</label>
                <input type="file" class="form-control" id="inputGroupFile01" accept="image/*" name="photo">
            </div>
            
            <!-- <p>add Id </p> -->
            <br>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupFile01">Upload ID</label>
                <input type="file" class="form-control" id="inputGroupFile01" accept="image/*" name="id">
            </div>

            
            <!-- <p>Aggrement (how many years) + Date </p> -->
            <br>
            <div class="mb-3">
                <input class="form-check-input" type="checkbox" value="" id="agree" required>
                <label class="form-check-label" for="agree">Agree Term and conditions</label>
            </div>
            
            <!-- number of vichele (vichele number) -->
            <br>
            <div class="mb-3">
                <label for="vichele" class="form-label">Total number of Vichele</label>
                <input type="number" class="form-control" id="vichele" aria-describedby="emailHelp" name="vichele">
            </div>

            <p>
                <%= error %>
            </p>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</body>
</html>